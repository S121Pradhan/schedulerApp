{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "lib": ["es2015"]
  },
  "include": [".", "src/**/*.ts", "tests/**/*.ts", "*.json"],
  "exclude": ["node_modules"]
}
